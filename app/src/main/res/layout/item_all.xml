<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_1"
    android:paddingHorizontal="4pt"
    android:paddingVertical="2pt">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/all_image"
        android:layout_width="match_parent"
        android:layout_height="60pt"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/all_title"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/itemShapeStyle"
        tools:src="@drawable/download" />

    <TextView
        android:id="@+id/all_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2pt"
        android:layout_marginStart="4pt"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/all_subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/all_image"
        tools:text="Наоми" />

    <TextView
        android:id="@+id/all_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4pt"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/all_title"
        tools:text="2022 • fiction, action, horror" />

</androidx.constraintlayout.widget.ConstraintLayout>